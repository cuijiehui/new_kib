<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:id="@+id/title_main_rl"
    android:background="@color/com_facebook_blue"
    >
    <ImageView
        android:id="@+id/title_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/title_back"/>
    <TextView
        android:id="@+id/title_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/name_info"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toRightOf="@+id/title_back_iv"
        />
    <TextView
        android:id="@+id/title_main_name_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/tw__solid_white"
        android:text="@string/title_create_account"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/title_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/title_save"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tw__solid_white"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>
